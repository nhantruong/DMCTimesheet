@model DMCTimesheet.Models.C21_DetailAction
@{
    List<DMCTimesheet.Models.C07_WorkType> Worktype = ViewBag.Worktype as List<DMCTimesheet.Models.C07_WorkType>;
    ViewBag.Title = "Xóa công việc chi tiết";
}
<h3>Xóa Chi tiết công việc - <b class="text-primary">@Model.Id - @Model.DetailAction</b></h3>

<div class="modal-body">
    @using (Html.BeginForm("DeleteWorkDetailConfirmed", "Setting", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form>
            @* WorkType *@
            <div class="form-group row text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Id đầu việc</lable>
                <input type="text" class="form-control col-md-7 col-sm-9 col-xs-9" readonly name="Id" value="@Model.Id" />

                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên đầu việc</lable>
                    <input type="text" id="tendauviec" readonly class="form-control col-md-7 col-sm-9 col-xs-9" name="WorktypeId" placeholder="" required="" value="@Worktype.FirstOrDefault(s=>s.ID == Model.WorktypeId).WorkName" />
            </div>
            <div class="form-group row text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên Công việc chi tiết</lable>
                <input type="text" readonly class="form-control col-md-7 col-sm-9 col-xs-9" name="DetailAction" id="tenviecchitiet" placeholder="" required="" value="@Model.DetailAction" />
            </div>

            <div class="form-group text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3 text-left"></lable>
                <input type="submit" value="Xóa" class="btn btn-danger col-md-2" />
            </div>
        </form>
    }
</div>