@model DMCTimesheet.Models.C19_Workgroup
@{
    ViewBag.Title = "WorkGroup edit Page";
}
<div class="modal-body">
    @using (Html.BeginForm("EditWorkGroup", "Setting", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form> 
            <div class="form-group row text-left">
                <lable hidden class="control-label col-md-3 col-sm-3 col-xs-3">Id</lable>
                <input hidden type="number" disabled class="form-control col-md-7 col-sm-9 col-xs-9" name="GroupId" placeholder="" required="" value="@Model.GroupId" />
            </div>
            <div class="form-group row text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Mã nhóm</lable>
                <input type="number" class="form-control col-md-7 col-sm-9 col-xs-9" name="MaNhom" placeholder="" required="" value="@Model.MaNhom" />
            </div>
            <div class="form-group row text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên Nhóm</lable>
                <input type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="GroupName" placeholder="" required="" value="@Model.GroupName" />
            </div>
            <div class="form-group text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3 text-left"></lable>
                <input type="submit" value="Cập nhật thông tin" class="btn btn-info col-md-7" />
            </div>
        </form>
    }
</div>