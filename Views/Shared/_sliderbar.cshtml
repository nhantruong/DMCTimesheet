@{
    DMCTimesheet.Models.C02_Members loginUser = Session["UserLogin"] as DMCTimesheet.Models.C02_Members;
    string imgPath = "../Assets/Photos/MemberImage/no-image.jpg";
    imgPath = loginUser == null ? "~/Assets/Photos/MemberImage/no-image.jpg" : "~/Assets/Photos/MemberImage/" + loginUser.Image;
    DMCTimesheet.Models.C06_UserPermisRelationship Userpermiss = Session["UserPermission"] as DMCTimesheet.Models.C06_UserPermisRelationship;


}

<!-- sidebar menu -->
<div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
    <div class="menu_section">
        <h3 class="text-warning">General</h3>
        <ul class="nav side-menu">
            @* Bảng thông báo chung *@
            <li>
                <a><i class="fa fa-home"></i> Dashboard <span class="fa fa-chevron-down"></span></a>
                <ul class="nav child_menu">
                    <li>@Html.ActionLink("Overview", "Index", "Home")</li>
                    <li>@Html.ActionLink("Ongoing Projects", "OngoingProjects", "Projects")</li>
                </ul>
            </li>
            @* Quản lý dự án *@
            @if (Userpermiss.idPer != 2)
            {
                <li>
                    <a><i class="fa fa-desktop"></i> Project Manage <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                        <li>@Html.ActionLink("Manage Projects", "Index", "Projects")</li>
                        <li>@Html.ActionLink("Create New Projects", "AdminCreate", "Projects")</li>
                        <li>@Html.ActionLink("Assign Member", "AssignMember", "Projects")</li>
                    </ul>
                </li>

                @* Quản lý Members *@
                <li>
                    <a><i class="fa fa-user"></i> Members <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                        <li>@Html.ActionLink("Manage Member", "Index", "Member")</li>
                        @switch (Userpermiss.idPer)
                        {
                            //case 1://WebAdmin (1)
                            //    {

                            //        break;
                            //    }
                            case 3:// System Administrator
                                {
                                    <li>@Html.ActionLink("Set Member permission", "SetPermission", "Member", new { @class = "text-info" })</li>
                                    <li>@Html.ActionLink("Update Member permission", "EditPermission", "Member", new { @class = "text-info" })</li>
                                    break;
                                }
                            case 4://System Moderator
                                {
                                    <li>@Html.ActionLink("Update Member permission", "EditPermission", "Member", new { @class = "text-info" })</li>
                                    break;
                                }

                            default:
                                break;
                        }
                    </ul>
                </li>
            }

            @* Công việc *@
            <li>
                <a><i class="fa fa-table"></i> Timesheet <span class="fa fa-chevron-down"></span></a>
                <ul class="nav child_menu">
                    <li>@Html.ActionLink("Project Timesheet", "ProjectTimesheet", "Timesheet")</li>
                    <li>@Html.ActionLink("Member Timesheet", "MemberTimesheet", "Timesheet")</li>
                    @if (Userpermiss.idPer != 2)
                    {
                        <li>@Html.ActionLink("Worktype", "Worktype", "Timesheet")</li>
                    }                    
                </ul>
                <a class="text-info"></a>
            </li>
        </ul>
    </div>

    <div class="menu_section">
        <h3 class="text-warning">NEWS</h3>
        <ul class="nav side-menu">
           
            <li>
                <a href="https://mycoteccons.vn" ><i class="fa fa-asterisk"></i> myCoteccons.vn </a>
            </li>
            <li>
                <a><i class="fa fa-newspaper-o"></i>  DMC News<span class="text-reset"></span></a>
            </li>
        </ul>
    </div>
</div>
<!-- /sidebar menu -->
