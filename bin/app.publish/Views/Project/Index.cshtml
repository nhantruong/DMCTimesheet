            {
                <tr class="row">
                    <td>Chưa có dự án được tạo</td>
                </tr>
            }
            else
            {
                foreach (var item in myProject.Where(s => s.ProjectStage != 5).OrderByDescending(m => m.MaDuAn).ThenBy(p => p.ProjectOtherName))
                {
                    <tr class="row text-dark">
