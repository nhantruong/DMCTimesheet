@model DMCTimesheet.Models.C12_SubContractor
@{
    ViewBag.Title = "Edit Design Constractor Page";
    string updateInfo = ViewBag.SaveContent;
    List<DMCTimesheet.Models.C11_Location> Locations = ViewBag.Location as List<DMCTimesheet.Models.C11_Location>;
}

<div class="modal-body">
    @using (Html.BeginForm("DeleteNTPConfirm", "Setting", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form>
            @* WorkType *@
            <div class="form-group row text-left text-dark">
                <lable hidden class="control-label col-md-3 col-sm-3 col-xs-3">Id</lable>
                <input hidden type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="SubConId" value="@Model.SubConId" />
            </div>
            <div class="form-group row text-left text-dark">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên đầy đủ của CDT</lable>
                <input disabled type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="ContractorName" placeholder="Tên theo Hợp đồng" required="" value="@Model.ContractorName" />
            </div>
            <div class="form-group row text-left text-dark">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên rút gọn</lable>
                <input disabled type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="ShortName" placeholder="Tên rút gọn" value="@Model.ShortName" />
            </div>

            <div class="form-group row text-left text-dark">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Vị trí</lable>
                <select disabled name="ContractorLocation" class="form-control col-md-7 col-sm-9 col-xs-9">
                    @if (Model.ContractorLocation != null)
                    {
                        <option value="@Model.ContractorLocation"></option>
                    }
                    else
                    {
                        <option value=""></option>
                    }
                    @foreach (var item in Locations)
                    {
                        <option value=@item.LocationId>@item.LocationName</option>
                    }
                </select>
            </div>
            <div class="clearfix"></div>
            <div class="form-group text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3 text-left"></lable>
                <input type="submit" value="Xóa NTP" class="btn btn-danger col-md-1" />
            </div>
        </form>
    }
</div>
<hr />
<h6 class="text-danger">@ViewBag.Error</h6>