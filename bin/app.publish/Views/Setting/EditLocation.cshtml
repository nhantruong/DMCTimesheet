@model DMCTimesheet.Models.C11_Location
@{
    ViewBag.Title = "Location Edit Page";
}
<h3>@ViewBag.Title</h3>
<div class="modal-body">
    @using (Html.BeginForm("EditLocation", "Setting", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form>
            @* WorkType *@
            <div class="form-group row text-left text-dark">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Id</lable>
                <input type="number" class="form-control col-md-7 col-sm-9 col-xs-9" name="LocationId" readonly required="" value="@Model.LocationId" />
            </div>
            <div class="form-group row text-left text-dark">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên địa điểm</lable>
                <input type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="LocationName" placeholder="Tên địa điểm" required="" value="@Model.LocationName" />
            </div>

            <br />
            <div class="clearfix"></div>

            <div class="form-group text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3 text-left"></lable>
                <input type="submit" value="Lưu thông tin" class="btn btn-success col-md-2" />
            </div>
        </form>
    }
</div>
<hr />
<h6 class="text-danger">@ViewBag.Error</h6>