@model DMCTimesheet.Models.C13_ProjectType
@{
    ViewBag.Title = "Project Type Edit Page";
}
<h3>@ViewBag.Title</h3>
<div class="modal-body">
    @using (Html.BeginForm("EditProjectType", "Setting", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form>
            <div class="form-group row text-left text-dark">
                <lable hidden class="control-label col-md-3 col-sm-3 col-xs-3">Tên loại hình</lable>
                <input hidden type="number" class="form-control col-md-7 col-sm-9 col-xs-9" name="TypeId" placeholder="Tên loại hình" required="" value="@Model.TypeId" />
            </div>
            <div class="form-group row text-left text-dark">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên loại hình</lable>
                <input type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="TypeName" placeholder="Tên loại hình" required="" value="@Model.TypeName" />
            </div>
            <div class="form-group row text-left text-dark">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Chú thích</lable>
                <input type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="Description" placeholder="Chú thích" value="@Model.Description" />
            </div>


            <br />
            <div class="clearfix"></div>

            <div class="form-group text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3 text-left"></lable>
                <input type="submit" value="Lưu thông tin cập nhật" class="btn btn-success col-md-1" />
            </div>
        </form>
    }
</div>
<hr />
<h6 class="text-danger">@ViewBag.Error</h6>