@model DMCTimesheet.Models.C02_Members
@{
    DMCTimesheet.Models.C06_UserPermisRelationship Userpermiss = Session["UserPermission"] as DMCTimesheet.Models.C06_UserPermisRelationship;
    ViewBag.Title = "Thay đổi trạng thái";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    DMCTimesheet.Models.C02_Members loginUser = Session["UserLogin"] as DMCTimesheet.Models.C02_Members;

    //Data from controller
    List<DMCTimesheet.Models.C17_Position> Positions = ViewBag.Position as List<DMCTimesheet.Models.C17_Position>;
    List<DMCTimesheet.Models.C18_Descipline> desciplines = ViewBag.Descipline as List<DMCTimesheet.Models.C18_Descipline>;
}

<h3>@ViewBag.Title</h3>

<div class="modal-body">
    @using (Html.BeginForm("OnOffline", "Member", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(s=>s.UserID)
    <form>
        <div class="clearfix"></div>
        <h5>Sử dụng nút chọn này khi thành viên [<i class="text-primary">@Model.UserID - @Model.FullName</i> ] không còn làm việc ở Trung tâm thiết kế nữa </h5>
        <p></p>

        <div class="form-group form-control text-left form-inline" style="background:#000000">
            <label class="control-label text-danger col-md-2">TÌNH TRẠNG LÀM VIỆC</label>
            <select name="Deactived" class="form-control col-md-7 col-sm-9 col-xs-9">
                <option value="False">Đang làm việc tại DMC</option>
                <option value="True">Chuyển công tác</option>
            </select>
        </div>

        <div class="clearfix"></div>

        <div class="form-group text-left">
            <lable class="control-label col-sm-3 col-sm-3 col-xs-3 text-left text-white"></lable>
            <input type="submit" value="Chuyển trạng thái" class="btn btn-danger col-sm-2" />
        </div>
    </form>
    }
</div>
<div class="modal-footer">
    <div>
        <p class="text-danger">@ViewBag.Error</p>
    </div>
    <div class="clearfix"></div>
</div>