                <td class="col-md-1">TK Kiến trúc</td>
                <td class="col-md-1">TK Nội thất</td>
                <td class="col-md-1">TK Kết cấu</td>
                <td class="col-md-1">TK MEP</td>
                <td class="col-md-1">TK Landscape</td>
                <td class="col-md-1">Pháp lý</td>
                <td class="col-md-1">Xóa</td>
            </tr>
        </thead>
    </table>
</div>

<div class="table-responsive" style="height:600px">
    <table class="table table-hover table-condensed table-bordered table-striped">
        <caption>Số lượng dự án đang điều phối <b class="text-danger">@Model.Count()</b></caption>
        <tbody>
            @if (Model == null || Model.Count() == 0)
            {
                <tr class="row">
                    <td>Chưa chỉ định thầu phụ cho dự án</td>
                </tr>
            }
            else
            {
                foreach (var item in Model.OrderByDescending(s => s.Date))
                {
                    string name = Project.FirstOrDefault(s => s.ProjectID == item.ProjectId).MaDuAn + " - " + Project.FirstOrDefault(s => s.ProjectID == item.ProjectId).ProjectOtherName;

                    <tr class="row text-dark table-bordered">
                        <td class="col-md-1">@DateTime.Parse(item.Date.ToString()).ToShortDateString()</td>
                        @*  <td class="col-md-2"><b>@item.ProjectId - @Project.FirstOrDefault(s => s.ProjectID == item.ProjectId).ProjectName</b></td>*@
                        <td class="col-md-2"><b>@Html.ActionLink(name, "EditAssign", "Project", new { Id = item.Id }, new { @class = "text-primary" })</b></td>
                        <td class="col-md-1">
                            @if (item.ArcId != null)
                            {
                                @SubCons.FirstOrDefault(s => s.SubConId == item.ArcId).ShortName
                            }
                        </td>
                        <td class="col-md-1">
                            @if (item.InteriorId != null)
                            {
                                @SubCons.FirstOrDefault(s => s.SubConId == item.InteriorId).ShortName
                            }
                        </td>
                        <td class="col-md-1">
                            @if (item.StructureId != null)
                            {
                                @SubCons.FirstOrDefault(s => s.SubConId == item.StructureId).ShortName
                            }
                        </td>
                        <td class="col-md-1">
                            @if (item.MEPid != null)
                            {
                                @SubCons.FirstOrDefault(s => s.SubConId == item.MEPid).ShortName
                            }
                        </td>
                        <td class="col-md-1">
                            @if (item.LandscapeId != null)
                            {
                                @SubCons.FirstOrDefault(s => s.SubConId == item.LandscapeId).ShortName
                            }
                        </td>
                        <td class="col-md-1">
                            @if (item.LegalId != null)
                            {
                                @SubCons.FirstOrDefault(s => s.SubConId == item.LegalId).ShortName
                            }
                        </td>
                        <td class="col-md-1">@Html.ActionLink(" ", "DeleteAssign", "Project", new { Id = item.Id }, new { @class = "fa fa-remove btn" })</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

