@model DMCTimesheet.Models.C15_SubConServices
@{
    ViewBag.Title = "Delete Subcontractor Service Page";
    List<DMCTimesheet.Models.C12_SubContractor> CompanyName = ViewBag.CompanyName as List<DMCTimesheet.Models.C12_SubContractor>;
    List<DMCTimesheet.Models.C14_Services> Services = ViewBag.Services as List<DMCTimesheet.Models.C14_Services>;
}

<h5 class="text-danger">@ViewBag.Error</h5>
<div class="modal-body">
    @using (Html.BeginForm("DeleteCompanyServiceConfirm", "Setting", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form>
            <div class="form-group row">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Ngày tạo</lable>
                <input type="date" class="form-control  col-md-7 col-sm-7 col-xs-7" name="Date" placeholder="" required="" value="@Model.Date.Value.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group row">
                <lable hidden class="control-label col-md-3 col-sm-3 col-xs-3">Id</lable>
                <select hidden name="Id" class="form-control col-md-7">
                    <option value="@Model.Id">@Model.Id</option>
                </select>
            </div>
            <div class="form-group row">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên Công ty</lable>
                <select name="SubConId" class="form-control col-md-7">
                    <option value="@Model.SubConId">@CompanyName.FirstOrDefault(s => s.SubConId == Model.SubConId).ContractorName</option>
                </select>
            </div>
            <div class="form-group row">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên dịch vụ</lable>
                <select name="ServiceId" class="form-control col-md-7">
                    <option value="">@Services.FirstOrDefault(s => s.ServiceId == Model.ServiceId).ServiceName</option>
                </select>
            </div>

            <br />
            <div class="clearfix"></div>

            <div class="form-group text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3 text-left"></lable>
                <input type="submit" value="Xóa" class="btn btn-danger col-md-2" />
            </div>
        </form>
    }
</div>