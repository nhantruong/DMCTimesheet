@model IEnumerable<DMCTimesheet.Models.C18_Descipline>
@{
    ViewBag.Title = "Member Position Manage Page";
    int stt = 1;
}

<div class="row">
    <div class="col-md-10">
        <h3>
            DANH MỤC BỘ MÔN - <b>
                @if (Model == null)
                {
                    <b class="text-primary">0</b>}
                else
                {<b class="text-danger">@Model.Count()</b>}
            </b>
        </h3>
    </div>
    <div class="col-md-2">
        <button type="button" class="btn btn-danger btn-small text-right" data-toggle="modal" data-target="#form"><i class="fa fa-plus-circle"></i> Thêm Chuyên môn</button>
    </div>
</div>

@* Modal create new *@
<h3 class="text-danger">@ViewBag.Error</h3>

@* Form nhập liệu *@
<div id="form" class="modal fade" role="dialog">
    <div class="modal-dialog modal-m">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Thêm chuyên môn</h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateNewDesciplines", "Setting", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <form>
                        @* WorkType *@
                        <div class="form-group row text-left text-dark">
                            <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên chuyên môn</lable>
                            <input type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="DesciplineName" placeholder="Tên chuyên môn" required="" value="" />
                        </div>
                        <div class="form-group row text-left text-dark">
                            <lable class="control-label col-md-3 col-sm-3 col-xs-3">Kích hoạt</lable>
                            <select name="Active" class="form-control col-md-7 col-sm-9 col-xs-9">
                                <option value="0"></option>
                                <option value="1">Kích hoạt</option>
                                <option value="0">Không kích hoạt</option>
                            </select>
                        </div>

                        <br />
                        <div class="clearfix"></div>

                        <div class="form-group text-left">
                            <lable class="control-label col-md-3 col-sm-3 col-xs-3 text-left"></lable>
                            <input type="submit" value="Lưu thông tin" class="btn btn-success col-md-7" />
                        </div>
                    </form>
                }
            </div>
            <div class="modal-footer">
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
@* End Form nhập liệu *@


<div>
    <p class="text-danger">@ViewBag.SaveContent</p>
</div>

@*Table area*@
<div class="table-responsive col-md-12">
    <table class="table table-borderless">
        <tr class="text-white" style="background-color:#000000">
            <td class="col-sm-1">STT</td>
            <td class="col-sm-2">Tên Chuyên môn</td>
            <td class="col-sm-1">Tình trạng kích hoạt</td>
            <td class="col-sm-1">#</td>
        </tr>
    </table>
</div>
<div class="table-responsive" style="height:900px">
    <table class="table table-striped table-bordered">
        <tbody class="">
            @if (Model == null || Model.Count() == 0)
            {
                <tr class="row">
                    <td class="col-sm-1">Chưa có thông tin</td>
                </tr>
            }
            else
            {
                foreach (var item in Model.OrderBy(s => s.DesciplineName))
                {
                    <tr class="row">
                        <td class="col-md-1 text-center">@stt</td>
                        <td class="col-sm-2">
                            @if (item.DesciplineName != null)
                            {
                                <b>@Html.ActionLink(item.DesciplineName, "EditDescipline", "Setting", new { Id = item.Id }, new { @class = "text-primary" })</b>
                                @*<b class="text-danger">@item.DesciplineName</b>*@
                            }
                        </td>
                        <td class="col-sm-1">
                            @if (item.Active != null)
                            {
                                if (item.Active == true)
                                {
                                    <b class="text-primary">Active</b>
                                }
                                else
                                {
                                    <b class="text-primary">Un-active</b>
                                }

                            }
                        </td>
                        @* Button *@
                        <td class="col-md-1">
                            @Html.ActionLink(" ", "EditDescipline", "Setting", new { Id = item.Id }, new { @class = "fa fa-edit" })
                            @Html.ActionLink(" ", "DeleteDescipline", "Setting", new { Id = item.Id }, new { @class = "fa fa-remove btn" })
                        </td>
                    </tr>
                    stt++;
                }
            }
        </tbody>

    </table>

</div>
