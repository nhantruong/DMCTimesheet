@model DMCTimesheet.Models.C14_Services
@{
    ViewBag.Title = "Edit Service Page";
}

<h3>@ViewBag.Title</h3>
<div class="modal-body">
    @using (Html.BeginForm("EditService", "Setting", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form>
            @* WorkType *@
            <div class="form-group row text-left text-dark">
                <lable hidden class="control-label col-md-3 col-sm-3 col-xs-3">Id</lable>
                <input hidden type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="ServiceId" value="@Model.ServiceId" />
            </div>
            <div class="form-group row text-left text-dark">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên dịch vụ</lable>
                <input type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="ServiceName" required="" value="@Model.ServiceName" />
            </div>
            <br />
            <div class="clearfix"></div>

            <div class="form-group text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3 text-left"></lable>
                <input type="submit" value="Lưu thông tin" class="btn btn-success col-md-2" />
            </div>
        </form>
    }
</div>
<hr />
<h6 class="text-danger">@ViewBag.Error</h6>