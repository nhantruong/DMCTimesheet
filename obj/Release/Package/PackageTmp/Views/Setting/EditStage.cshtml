@model DMCTimesheet.Models.C20_Stage
@{
    ViewBag.Title = "Edit Project Stage Page";
}
<h3>@ViewBag.Title</h3>
<div class="modal-body">
    @using (Html.BeginForm("EditStage", "Setting", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form>            
            <div class="form-group row text-left text-dark">
                <lable hidden class="control-label col-md-3 col-sm-3 col-xs-3">Id</lable>
                <input hidden type="number" class="form-control col-md-7 col-sm-9 col-xs-9" name="Id" placeholder="Id" required="" value="@Model.Id" />
            </div>
            <div class="form-group row text-left text-dark">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3">Tên Giai đoạn</lable>
                <input type="text" class="form-control col-md-7 col-sm-9 col-xs-9" name="StageName" placeholder="Tên giai đoạn" required="" value="@Model.StageName" />
            </div>
            <br />
            <div class="clearfix"></div>

            <div class="form-group text-left">
                <lable class="control-label col-md-3 col-sm-3 col-xs-3 text-left"></lable>
                <input type="submit" value="Lưu thông tin" class="btn btn-success col-md-2" />
            </div>
        </form>
    }
</div>
<hr />
<h6 class="text-danger">@ViewBag.Error</h6>